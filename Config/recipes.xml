	<!--Master Chef Perk-->
	<!--create recipes to be unlocked by top level of Master Chef perk-->
	<append xpath="/recipes">
		<recipe name="foodChickenStew" count="1" craft_area="campfire" craft_tool="toolCookingPot" tags="perkMasterChef,learnable">
			<ingredient name="foodCanChicken" count="1"/>
			<ingredient name="foodCanSoup" count="1"/>
			<ingredient name="foodCanPasta" count="1"/>
			<ingredient name="foodCropCorn" count="1"/>
