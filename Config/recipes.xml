		</recipe>
		<recipe name="foodBeefTacos" count="1" craft_area="campfire" craft_tool="toolCookingGrill" tags="perkMasterChef,learnable">
			<ingredient name="foodCanBeef" count="1"/>
			<ingredient name="foodCornMeal" count="2"/>
