			<ingredient name="drinkJarBoiledWater" count="1"/>
		</recipe>
	</append>
	
	<!--Advanced Engineering Perk-->
	<!--reduce crafting cost for Advanced Engineering perk-->
	<set xpath="/recipes/recipe[@craft_area='workbench']/effect_group/passive_effect[@name='CraftingIngredientCount']/@level">0,1,2,3,4,5,6,7,8</set>
	<set xpath="/recipes/recipe[@craft_area='workbench']/effect_group/passive_effect[@name='CraftingIngredientCount']/@value">.5,.5,.5,.3,.15,0,0,-.25,-.25</set>
	<set xpath="/recipes/recipe[@craft_area='forge']/effect_group/passive_effect[@name='CraftingIngredientCount']/@level">0,1,2,3,4,5,6,7,8</set>
	<set xpath="/recipes/recipe[@craft_area='forge']/effect_group/passive_effect[@name='CraftingIngredientCount']/@value">.25,.25,.25,.177,.12,0,0,-.25,-.25</set>
	<set xpath="/recipes/recipe[@name='resourceForgedSteel']/effect_group/passive_effect[@name='CraftingIngredientCount']/@level">0,1,2,3,4,5,6,7,8</set>
