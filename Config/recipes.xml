	<set xpath="/recipes/recipe[@name='resourceGlue']/effect_group/passive_effect[@name='CraftingIngredientCount']/@level">1,8</set>
	<!--create recipes to be unlocked by top level of Advanced Engineering-->
	<append xpath="/recipes">
		<recipe name="solarCell" count="1" craft_area="workbench" tags="perkAdvancedEngineering,learnable">
			<ingredient name="glassBulletproofBlockVariantHelper" count="1"/>
			<ingredient name="resourceForgedSteel" count="5"/>
			<ingredient name="resourceElectricParts" count="10"/>
		</recipe>
		<recipe name="solarbank" count="1" craft_area="workbench" tags="perkAdvancedEngineering,learnable">
			<ingredient name="resourceForgedSteel" count="50"/>
			<ingredient name="resourceElectricParts" count="50"/>
			<ingredient name="resourceScrapPolymers" count="25"/>
		</recipe>
	</append>
	
