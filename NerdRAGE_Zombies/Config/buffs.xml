<configs>
	<!--increase max HP and stamina-->
	<set xpath="buffs/buff[@name='buffStatusCheck01']/effect_group/triggered_effect[@trigger='onSelfBuffUpdate' and @action='ModifyCVar' and @cvar='$PlayerLevelBonus' and @operation='set' and @value='100']/@value">300</set>
	<set xpath="buffs/buff[@name='buffStatusCheck01']/effect_group/triggered_effect[@trigger='onSelfBuffUpdate' and @action='ModifyCVar' and @cvar='$PlayerLevelBonus' and @operation='set' and @value='300']/requirement[@name='PlayerLevel']/@value">300</set>
	
	<!--Dead Eye Perk-->
	<!--decrease stamina usage of aiming rifles for Dead Eye perk-->
	<append xpath="/buffs/buff[@name='buffHoldBreathAiming01']/effect_group/requirement[@name='HoldingItemHasTags' and @tags='perkDeadEye']">
		<passive_effect name="StaminaChangeOT" operation="perc_add" value=".4">
				<requirement name="ProgressionLevel" progression_name="perkDeadEye" operation="Equals" value="6"/>
		</passive_effect>
		<passive_effect name="StaminaChangeOT" operation="perc_add" value=".5">
				<requirement name="ProgressionLevel" progression_name="perkDeadEye" operation="Equals" value="7"/>
		</passive_effect>
		<passive_effect name="StaminaChangeOT" operation="perc_add" value=".75">
				<requirement name="ProgressionLevel" progression_name="perkDeadEye" operation="Equals" value="8"/>
		</passive_effect>
	</append>
	<!--increase rifle kill streak damage for Dead Eye perk-->
	<append xpath="/buffs/buff[@name='buffDeadEye']/effect_group">
		<triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar=".DeadEyeEffectBase" operation="set" value=".3">
			<requirement name="ProgressionLevel" progression_name="perkDeadEye" operation="Equals" value="6"/></triggered_effect>
		<triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar=".DeadEyeEffectBase" operation="set" value=".4">
			<requirement name="ProgressionLevel" progression_name="perkDeadEye" operation="Equals" value="7"/></triggered_effect>
		<triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar=".DeadEyeEffectBase" operation="set" value=".6">
			<requirement name="ProgressionLevel" progression_name="perkDeadEye" operation="Equals" value="8"/></triggered_effect>
	</append>
	
	<!--Heavy Armor Perk-->
	<!--decrease movement and stamina penalties for Heavy Armor perk-->
	<append xpath="/buffs/buff[@name='buffStatusCheck02']">
		<effect_group>
			<requirement name="ProgressionLevel" progression_name="perkHeavyArmor" operation="Equals" value="5"/>
			<requirement name="CVarCompare" cvar=".ArmorHeavyWorn" operation="GT" value="0"/>
				<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar=".ArmorHeavyStaminaWalk" operation="set" value=".50"/>
				<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar=".ArmorHeavyMobility" operation="set" value=".50"/>
		</effect_group>
		<effect_group>
			<requirement name="ProgressionLevel" progression_name="perkHeavyArmor" operation="Equals" value="6"/>
			<requirement name="CVarCompare" cvar=".ArmorHeavyWorn" operation="GT" value="0"/>
				<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar=".ArmorHeavyStaminaWalk" operation="set" value=".75"/>
				<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar=".ArmorHeavyMobility" operation="set" value=".75"/>
		</effect_group>
	</append>
	
	<!--Healing Factor Perk-->
	<!--increase crit healing rate for Healing Factor perk-->
	<append xpath="/buffs/buff[@name='buffStatusCheck02']">
		<effect_group>
			<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar="$critHitNaturalHealingRate" operation="set" value="2.25">
				<requirement name="ProgressionLevel" progression_name="perkHealingFactor" operation="Equals" value="6"/></triggered_effect>
			<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar="$critHitNaturalHealingRate" operation="set" value="2.50">
				<requirement name="ProgressionLevel" progression_name="perkHealingFactor" operation="Equals" value="7"/></triggered_effect>
			<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar="$critHitNaturalHealingRate" operation="set" value="2.75">
				<requirement name="ProgressionLevel" progression_name="perkHealingFactor" operation="Equals" value="8"/></triggered_effect>
		</effect_group>
	</append>
	
	<!--Iron Gut Perk-->
	<!--reduce chance of dysentery and increase food buff time for Iron Gut perk-->
	<append xpath="/buffs/buff[@name='buffPerkAbilityUpdate']/effect_group">
		<triggered_effect trigger="onSelfBuffStack" action="ModifyCVar" cvar="$MetabolismResist" operation="set" value="-6">
			<requirement name="ProgressionLevel" progression_name="perkSlowMetabolism" operation="Equals" value="6"/></triggered_effect>
		<triggered_effect trigger="onSelfBuffStack" action="ModifyCVar" cvar="$MetabolismResist" operation="set" value="-8">
			<requirement name="ProgressionLevel" progression_name="perkSlowMetabolism" operation="Equals" value="7"/></triggered_effect>
		<triggered_effect trigger="onSelfBuffStack" action="ModifyCVar" cvar="$MetabolismResist" operation="set" value="-10">
			<requirement name="ProgressionLevel" progression_name="perkSlowMetabolism" operation="Equals" value="8"/></triggered_effect>
		<triggered_effect trigger="onSelfBuffStack" action="ModifyCVar" cvar="$MetabolismDuration" operation="set" value=".625">
			<requirement name="ProgressionLevel" progression_name="perkSlowMetabolism" operation="Equals" value="6"/></triggered_effect>
		<triggered_effect trigger="onSelfBuffStack" action="ModifyCVar" cvar="$MetabolismDuration" operation="set" value=".571">
			<requirement name="ProgressionLevel" progression_name="perkSlowMetabolism" operation="Equals" value="7"/></triggered_effect>
		<triggered_effect trigger="onSelfBuffStack" action="ModifyCVar" cvar="$MetabolismDuration" operation="set" value=".500">
			<requirement name="ProgressionLevel" progression_name="perkSlowMetabolism" operation="Equals" value="8"/></triggered_effect>
	</append>
	
	<!--Gunslinger Perk-->
	<!--extend gunslinger combo to higher levels of Gunslinger perk-->
	<append xpath="/buffs/buff[@name='buffPerkGunslinger']">
		<effect_group name="perkT6">
			<requirement name="ProgressionLevel" progression_name="perkGunslinger" operation="Equals" value="6"/>
			<requirement name="CVarCompare" cvar=".GunslingerCombo" operation="Equals" value="2"/>
				<triggered_effect trigger="onSelfBuffStack" action="ModifyCVar" cvar=".GunslingerBonusReady" operation="set" value="1"/>
		</effect_group>
		<effect_group name="perkT7">
			<requirement name="ProgressionLevel" progression_name="perkGunslinger" operation="Equals" value="7"/>
			<requirement name="CVarCompare" cvar=".GunslingerCombo" operation="Equals" value="2"/>
				<triggered_effect trigger="onSelfBuffStack" action="ModifyCVar" cvar=".GunslingerBonusReady" operation="set" value="1"/>
		</effect_group>
		<effect_group name="perkT8">
			<requirement name="ProgressionLevel" progression_name="perkGunslinger" operation="Equals" value="8"/>
			<requirement name="CVarCompare" cvar=".GunslingerCombo" operation="Equals" value="2"/>
				<triggered_effect trigger="onSelfBuffStack" action="ModifyCVar" cvar=".GunslingerBonusReady" operation="set" value="1"/>
		</effect_group>
	</append>
	
	<!--Deep Cuts Perk-->
	<!--set maximum number of bleeds on enemies for Deep Cuts perk-->
	<append xpath="/buffs/buff[@name='buffStatusCheck01']/effect_group">
		<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar="$maxBleedCounter" operation="set" value="8">
			<requirement name="ProgressionLevel" progression_name="perkDeepCuts" operation="Equals" value="6"/></triggered_effect>
		<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar="$maxBleedCounter" operation="set" value="9">
			<requirement name="ProgressionLevel" progression_name="perkDeepCuts" operation="Equals" value="7"/></triggered_effect>
		<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar="$maxBleedCounter" operation="set" value="10">
			<requirement name="ProgressionLevel" progression_name="perkDeepCuts" operation="Equals" value="7"/></triggered_effect>
	</append>
	
	<!--Light Armor Perk-->
	<!--decrease movement and stamina penalties for Light Armor perk-->
	<append xpath="/buffs/buff[@name='buffStatusCheck02']">
		<effect_group>
			<requirement name="ProgressionLevel" progression_name="perkLightArmor" operation="Equals" value="5"/>
			<requirement name="CVarCompare" cvar=".ArmorLightWorn" operation="GT" value="0"/>
				<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar=".ArmorLightStaminaWalk" operation="set" value=".65"/>
				<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar=".ArmorLightMobility" operation="set" value=".90"/>
		</effect_group>
		<effect_group>
			<requirement name="ProgressionLevel" progression_name="perkLightArmor" operation="Equals" value="6"/>
			<requirement name="CVarCompare" cvar=".ArmorLightWorn" operation="GT" value="0"/>
				<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar=".ArmorLightStaminaWalk" operation="set" value=".90"/>
				<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar=".ArmorLightMobility" operation="set" value="1"/>
		</effect_group>
	</append>
	
	<!--Parkour Perk-->
	<!--increase safe falling distance for Parkour perk-->
	<append xpath="/buffs/buff[@name='buffPerkAbilityUpdate']/effect_group">
		<triggered_effect trigger="onSelfBuffStack" action="ModifyCVar" cvar="$parkourBonus" operation="set" value=".1019">
			<requirement name="ProgressionLevel" progression_name="perkParkour" operation="Equals" value="5"/> </triggered_effect>
		<triggered_effect trigger="onSelfBuffStack" action="ModifyCVar" cvar="$parkourBonus" operation="set" value=".1456">
			<requirement name="ProgressionLevel" progression_name="perkParkour" operation="Equals" value="6"/> </triggered_effect>
	</append>
	
	<!--Charismatic Nature Perk-->
	<!--increase HP and stamina for level 5, decrease incoming damage for level 6 of Charismatic Nature perk-->
	<append xpath="/buffs/buff[@name='buffPerkCharismaticNature']">
		<effect_group>
			<requirement name="CVarCompare" cvar="CharismaticNatureLevel" operation="GTE" value="5"/>
				<passive_effect name="HealthMax" operation="base_add" value="50"/>
				<passive_effect name="StaminaMax" operation="base_add" value="50"/>
		</effect_group>
		<effect_group>
			<requirement name="CVarCompare" cvar="CharismaticNatureLevel" operation="GTE" value="6"/>
				<passive_effect name="HealthLoss" operation="perc_add" value="-.25"/>
		</effect_group>
	</append>
	
	<!--Physician Perk-->
	<!--increase healing bonus from medical items for Physician perk-->
	<append xpath="/buffs/buff[@name='buffPerkAbilityUpdate']/effect_group">
		<triggered_effect trigger="onSelfBuffStack" action="ModifyCVar" cvar="medicRegHealthIncreaseSpeed" operation="set" value="4.0">
			<requirement name="ProgressionLevel" progression_name="perkPhysician" operation="Equals" value="5"/></triggered_effect>
		<triggered_effect trigger="onSelfBuffStack" action="ModifyCVar" cvar="medicRegHealthIncreaseSpeed" operation="set" value="5.0">
			<requirement name="ProgressionLevel" progression_name="perkPhysician" operation="Equals" value="6"/></triggered_effect>
	</append>
</configs>