<configs>
	<!-- custom loot containers -->
		<append xpath="/lootcontainers">
			<lootcontainer id="301" name="human_corpse" count="1,2" size="6,3"
				destroy_on_close="false" loot_quality_template="qualBaseTemplate"
				sound_open="UseActions/open_corpse" sound_close="UseActions/close_corpse"
			>
				<item group="cannedfood" loot_prob_template="high" />
				<item group="foodCandy" loot_prob_template="medLow" />
				<item group="drinks" loot_prob_template="medLow" />
				<item group="groupApparelClothes" loot_prob_template="high" />
				<item group="groupApparelShoesAll" loot_prob_template="low" />
				<item group="groupArmorScaled" loot_prob_template="veryLow" />
				<item group="groupAmmoRegular" loot_prob_template="low" />
				<item group="groupToolsTiered" loot_prob_template="veryLow" />
				<item group="groupWeaponsAllScaled" loot_prob_template="low" />
				<item group="perkBooks" loot_prob_template="veryLow" />
				<item group="survivalMedical" loot_prob_template="veryLow" />
			</lootcontainer>

			<lootcontainer id="302" name="body_bags" count="1,2" size="6,3"
				destroy_on_close="false" loot_quality_template="qualBaseTemplate"
				sound_open="UseActions/open_corpse" sound_close="UseActions/close_corpse"
			>
				<item group="groupApparelClothes" loot_prob_template="high" />
				<item group="groupApparelShoesAll" loot_prob_template="low" />
			</lootcontainer>
		</append>
	<!-- / -->
</configs>